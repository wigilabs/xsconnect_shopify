<div class="register-frame">
  {% section 'breadcrumb' %}
  <!--
    <div class="product-count light medium-hide large-up-hide mb-7.5 flex flex-row justify-center container" role="status">
  -->
  <!-- </div> -->
  <div class="container">
    <h2 class="title-body text-center mb-7.5">
      {{ 'customer.register.title' | t }}
    </h2>
    <div class="customer register">
      <svg style="display: none">
        <symbol id="icon-error" viewBox="0 0 13 13">
            <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
            <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
            <path
                    d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z"
                    fill="white"/>
            <path
                    d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z"
                    fill="white" stroke="#EB001B" stroke-width="0.7"/>
        </symbol>
      </svg>

      <div class="register__form">
        {%- form 'create_customer', novalidate: 'novalidate' -%}
          {%- if form.errors -%}
            <ul class="messages__ul">
              {%- for field in form.errors -%}
                <li
                  {% if form.errors.messages[field] contains 'This email address is already' %}
                    style="flex-direction: column;"
                  {% endif %}
                >
                  <svg aria-hidden="true" focusable="false" role="presentation">
                    <use href="#icon-error"/>
                  </svg>
                  {{ form.errors.translated_fields[field] | capitalize }}
                  {{ form.errors.messages[field] }}
                </li>
              {%- endfor -%}
            </ul>

            <style>
              .product-count {
                margin-bottom: 20px !important;
              }
            </style>
          {%- endif -%}

          <div class="register__field field">
            <input
              type="text"
              name="customer[first_name]"
              id="RegisterForm-FirstName"
              {% if form.first_name %}
                value="{{ form.first_name }}"
              {% endif %}
              autocomplete="given-name"
              placeholder="{{ 'customer.register.first_name' | t }}"
            >
            {%- comment -%}
              <label for="RegisterForm-FirstName">
                {{ 'customer.register.first_name' | t }}
              </label>
            {%- endcomment -%}
          </div>
          <div class="register__field field">
            <input
              type="text"
              name="customer[last_name]"
              id="RegisterForm-LastName"
              {% if form.last_name %}
                value="{{ form.last_name }}"
              {% endif %}
              autocomplete="family-name"
              placeholder="{{ 'customer.register.last_name' | t }}"
            >
            {%- comment -%}
              <label for="RegisterForm-LastName">
                {{ 'customer.register.last_name' | t }}
              </label>
            {%- endcomment -%}
          </div>
          <div class="register__field field">
            <input
              type="email"
              name="customer[email]"
              id="RegisterForm-email"
              {% if form.email %}
                value="{{ form.email }}"
              {% endif %}
              spellcheck="false"
              autocapitalize="off"
              autocomplete="email"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="RegisterForm-email-error"
                style="border: 1px solid tomato;"
              {% endif %}
              placeholder="{{ 'customer.register.email' | t }}"
            >

            {% if form.errors contains 'email' %}
              <style>
                #RegisterForm-email::placeholder {
                  /* Chrome, Firefox, Opera, Safari 10.1+ */
                  color: tomato;
                  opacity: 1; /* Firefox */
                }

                #RegisterForm-email:-ms-input-placeholder {
                  /* Internet Explorer 10-11 */
                  color: tomato;
                }

                #RegisterForm-email::-ms-input-placeholder {
                  /* Microsoft Edge */
                  color: tomato;
                }
              </style>

              {%- comment -%}
                            <p class="mess-error-global">
                  <svg aria-hidden="true" focusable="false" role="presentation">
                    <use href="#icon-error" />
                  </svg>
                  <span>
                    {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                  </span>
                </p>
              {%- endcomment -%}
            {% endif %}

            {%- comment -%}
              <label for="RegisterForm-email">
                {{ 'customer.register.email' | t }}
              </label>
            {%- endcomment -%}
          </div>

          <div class="register__field field">
            <input
              type="password"
              name="customer[password]"
              id="RegisterForm-password"
              aria-required="true"
              {% if form.errors contains 'password' %}
                aria-invalid="true"
                aria-describedby="RegisterForm-password-error"
                style="border: 1px solid tomato;"
              {% endif %}
              placeholder="{{ 'customer.register.password' | t }}"
            >
            {%- comment -%}
              <label for="RegisterForm-password">
                {{ 'customer.register.password' | t }}
              </label>
            {%- endcomment -%}

            {% if form.errors contains 'password' %}
              <style>
                #RegisterForm-password::placeholder {
                  /* Chrome, Firefox, Opera, Safari 10.1+ */
                  color: tomato;
                  opacity: 1; /* Firefox */
                }

                #RegisterForm-password:-ms-input-placeholder {
                  /* Internet Explorer 10-11 */
                  color: tomato;
                }

                #RegisterForm-password::-ms-input-placeholder {
                  /* Microsoft Edge */
                  color: tomato;
                }
              </style>
            {% endif %}
          </div>

          <p class="register__brief">
            {{ 'customer.register.brief' | t }}
          </p>
          <button class="tp-btn tp-btn__primary">
            {{ 'customer.register.submit' | t }}
          </button>

          <button class="register__btnback tp-btn tp-btn__secondary">
            <a href="/account/login">Login</a>
          </button>

          {%- if form.errors -%}
            {% if form.errors contains 'email' %}
              <script>
                const inputEmail = document.querySelector('#RegisterForm-email');
                if (inputEmail) {
                  inputEmail.focus();
                }
              </script>
            {%- endif -%}

            {% if form.errors contains 'password' %}
              {% unless form.errors contains 'email' %}
                <script>
                  const inputPass = document.querySelector('#RegisterForm-password');
                  if (inputPass) {
                    inputPass.focus();
                  }
                </script>
              {% endunless %}
            {%- endif -%}
          {%- endif -%}
        {%- endform -%}
      </div>
    </div>
  </div>
</div>
