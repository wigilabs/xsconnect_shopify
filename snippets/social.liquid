<ul class="social-list flex items-center justify-content-between">
  {%- if settings.social_pinterest_link != blank -%}
    <li class="mb-0 mr-4 ">
      <a
        href="{{ settings.social_pinterest_link }}"
        class="link link--text list-social__link"
        flow="up" tooltip="Pinterest"
      >
        {% render 'icon', icon_name: 'icon-pinterest', w-h: w-h %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_instagram_link != blank -%}
    <li class="mb-0 mr-4">
      <a
        href="{{ settings.social_instagram_link }}"
        class="link link--text list-social__link"
        flow="up" tooltip="Instagram"
      >
        {% render 'icon', icon_name: 'icon-instagam', w-h: w-h %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_facebook_link != blank -%}
    <li class="mb-0 mr-4">
      <a
        href="{{ settings.social_facebook_link }}"
        class="link link--text list-social__link"
        flow="up" tooltip="Facebook"
      >
        {% render 'icon', icon_name: 'icon-facebook', w-h: w-h %}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_twitter_link != blank -%}
    <li class="mb-0 mr-4">
      <a
        href="{{ settings.social_twitter_link }}"
        class="link link--text list-social__link"
        flow="up" tooltip="Twitter"
      >
        {% render 'icon', icon_name: 'icon-twitter', w-h: w-h %}
      </a>
    </li>
  {%- endif -%}
</ul>

<style>
  #shopify-section-{{ section.id }} .social-list path {
    fill: {{ color_social }};
  }
</style>
