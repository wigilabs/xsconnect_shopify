{% liquid
  assign boxShadowItem = settings.box_shadow
  assign borderItem = settings.border_item
  assign hvr_borderItem = settings.hvr_border_item
  assign hoverTitle = settings.hover_title
  assign fontWeightTitle = settings.font_weigh_title
  assign fontWeightprice = settings.font_weight_price
  assign fontWeightpriceCompare = settings.font_weight_price_compare
  assign priceStyle = settings.style_price
%}

{% style %}
  .prd-item-heading{
    font-weight: {{ fontWeightTitle }};
    {% if settings.enable_min_height_title %}
      min-height: 45px;
  {% endif %}
  }
  {% if hoverTitle == 'change_color' %}
    .prd-item-heading::after{
      display: none;
    }
  {% endif %}

  {% if priceStyle == 'style_row' %}
    .price--on-sale .price__sale {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    gap: 10px;
  }
  {% else %}
  .price--on-sale .price__sale {
    display: flex;
    flex-direction: column-reverse;
    align-items: flex-start;
  }

  {% endif %}

  .price .price-item{
    font-weight: {{ fontWeightprice }};
  }
  .price .price__sale .price-item.price-item--regular{
    font-weight: {{ fontWeightpriceCompare }};
  }
  {% if settings.color_price != 'rgba(0,0,0,0)' or settings.color_price != '' %}
    .card-wrapper .price-item{
      color: {{ settings.color_price }};
    }
  {% endif %}

  .card .price-item--sale{
    color: {{ settings.color_price_item_last }};
  }

  {% if boxShadowItem == true %}
    .card-wrapper{
      background-color: #fff;
      box-shadow: 0 0 3px rgb(0 0 0 / 12%), 0 1px 3px rgb(0 0 0 / 24%);
      border-radius: 2px;
      padding: 0 0 20px 0;
    }
    .card-wrapper .card__content{
      padding: 20px;
    }
  {% endif %}

  {% if borderItem == true %}
    .card-wrapper{
      border: 1px solid #e7e7e7;
    }
    {% if hvr_borderItem == true %}
      .card-wrapper:hover{
        border: 1px solid var(--color-accent);
        border-right: 1px solid transparent;
      }
      .card-wrapper:hover::after {
        width: 1px;
    }
    {% endif %}
    .card-wrapper .card__content{
      padding: 20px;
    }
  {% endif %}
{% endstyle %}
