    {% endif %}
  {% endcomment %}
  {% if template != 'cart' %}
    <button class="link link--text focus-inset icon-contain-count">
      {% render 'icon', icon_name: 'icon-cart-header', width: 15, height: 15 %}
      <p class="badge-count count-item-cart">0</p>
    </button>
  {% endif %}
</div>
