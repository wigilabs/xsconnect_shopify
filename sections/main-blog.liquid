      "label": "Show sidebar",
      "default": true
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Placement",
      "default": "left_column",
      "options": [
        {
          "value": "left_column",
          "label": "Left column"
        },
        {
          "value": "right_column",
          "label": "Right column"
        }
      ]
    },
    {
      "type": "header",
      "content": "layout"
    },
    {
      "type": "select",
      "id": "view",
      "label": "Layout",
      "default": "grid_3_column",
      "options": [
        {
          "label": "Grid 2 column",
          "value": "grid_2_column"
        },
        {
          "label": "Grid 3 column",
          "value": "grid_3_column"
        },
        {
          "label": "Grid 1 column",
          "value": "grid_1_column"
        },
        {
          "label": "List",
