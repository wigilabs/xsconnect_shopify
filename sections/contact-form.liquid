{{ 'custom.css' | asset_url | stylesheet_tag }}
<div class="tp-contact container">
  <div class="block md:flex md:justify-start md:items-start md:gap-7.5 mb-15">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'map' %}
          <div class="iframe-maps w-full md:w-1/2">
            <div class="iframe-maps__main">{{ block.settings.iframe_address }}</div>
          </div>
        {% when 'form' %}
          <div class="tp-contact__form mb-10 md:mb-0">
            {%- if block.settings.heading != blank -%}
              <h1 class="title text-black">{{ block.settings.heading | escape }}</h1>
            {%- else -%}
              <h1 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h1>
            {%- endif -%}
            {% if block.settings.description != blank %}
              <div class="tp-contact__description mb-5">
                {{ block.settings.description }}
              </div>
            {%- endif -%}
            {%- form 'contact', id: 'ContactForm', class: 'isolate' -%}
              {%- if form.posted_successfully? -%}
                <div autofocus class="form-status form-status-list form__message" tabindex="-1">
                  {% render 'icon', icon_name: 'icon-success' %}
                  {{ 'templates.contact.form.post_success' | t }}
                </div>
              {%- elsif form.errors -%}
                <div class="form__message">
                  <ul class="form-status-list caption-large" role="list">
                    <li>
                      <a class="link" href="#ContactForm-email" style="color: tomato;">
                        {{ form.errors.translated_fields.email | capitalize }}
                        {{ form.errors.messages.email }}
                      </a>
                    </li>
                  </ul>
                </div>
              {%- endif -%}
              <div class="contact__fields">
                <div class="field">
                  <input
                    class="field__input"
                    autocomplete="name"
                    type="text"
                    id="ContactForm-name"
                    name="contact[{{ 'templates.contact.form.name' | t }}]"
                    value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                    placeholder="{{ 'templates.contact.form.name' | t }}"
                    required="required"
                  >
                </div>
                <div class="field field--with-error">
                  <input
                    autocomplete="email"
                    type="email"
                    id="ContactForm-email"
                    class="field__input"
                    name="contact[email]"
                    spellcheck="false"
                    autocapitalize="off"
                    value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                    aria-required="true"
                    {% if form.errors contains 'email' %}
                      aria-invalid="true" aria-describedby="ContactForm-email-error"
                    {% endif %}
                    placeholder="{{ 'templates.contact.form.email' | t }}"
                    required="required"
                  >
                </div>

                <div class="field">
                  <input
                    class="field__input"
                    autocomplete="name"
                    type="text"
                    id="ContactForm-name"
                    name="contact[Business name]"
                    value=""
                    placeholder="Business name"
                    required="required"
                  >
                </div>
              </div>
              <div class="field">
                <input
                  type="tel"
                  id="ContactForm-phone"
                  class="field__input"
                  autocomplete="tel"
                  name="contact[{{ 'templates.contact.form.phone' | t }}]"
                  pattern="[0-9\-]*"
                  value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                  placeholder="{{ 'templates.contact.form.phone' | t }}"
                  required="required"
                >
              </div>
              <div class="field">
                <textarea
                  rows="6"
                  id="ContactForm-body"
                  class="text-area field__input"
                  name="contact[{{ 'templates.contact.form.comment' | t }}]"
                  placeholder="{{ 'templates.contact.form.comment' | t }}"
                  required="required"
                >
                  {{- form.body -}}
                </textarea>
              </div>
              <div class="contact__button">
                <button class="tp-btn tp-btn__primary" type="submit">
                  {{ 'templates.contact.form.send' | t }}
                </button>
              </div>
            {%- endform -%}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'contact-info' %}
        <div class="tp-contact__info">
          {% if block.settings.title_info %}
            <h1 class="title">{{ block.settings.title_info }}</h1>
          {% endif %}
          {% if block.settings.info_description != blank %}
            <div class="tp-contact__description mb-5">
              {{ block.settings.info_description }}
            </div>
          {% endif %}
          <div class="tp-contact__info__content block md:flex">
            {% if block.settings.address != blank %}
              <div class="content-item">
                {% render 'icon', icon_name: 'pin-address', width: 30, height: 30 %}
                <div class="content-item__wrapper" style="margin-top: 10px;">
                  <span class="content-label text-black text-contact-footer">{{ block.settings.label_address }}</span>
                  <div class="content-value">
                    {{ block.settings.address }}
                  </div>
                </div>
              </div>
            {% endif %}
            {% if block.settings.address_email != blank %}
              <div class="content-item">
                {% render 'icon', icon_name: 'icon--mail--contact', width: 30, height: 30 %}
                <div class="content-item__wrapper" style="margin-top: 10px;">
                  <span class="content-label text-black text-contact-footer">{{ block.settings.label_email }}</span>
                  <div class="content-value">
                    {{ block.settings.address_email }}
                  </div>
                </div>
              </div>
            {% endif %}
            {% if block.settings.number_phone != blank %}
              <div class="content-item">
                {% render 'icon', icon_name: 'icon--phone', width: 30, height: 30 %}
                <div class="content-item__wrapper" style="margin-top: 10px;">
                  <span class="content-label text-black text-contact-footer">{{ block.settings.label_phone }}</span>
                  <div class="content-value">
                    {{ block.settings.number_phone }}
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</div>

