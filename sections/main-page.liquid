{%- style -%}

  .section-{{ section.id }}-padding {
    padding-bottom: 40px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-content-default page-width--narrow section-{{ section.id }}-padding{% if section.settings.page_width == "container" %} container{% endif %}">
  {% if section.settings.show_title %}
    <h1 class="main-page-title">
      {{ page.title | escape }}
    </h1>
  {% endif %}

  <div class="page-content">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "select",
      "id": "page_width",
      "label": "Page Width",
      "options": [
        {
          "value": "full",
          "label": "Full"
        },
        {
          "value": "container",
          "label": "Container"
        }
      ],
      "default": "container"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show title",
      "default": true
    }
  ]
}
{% endschema %}
