                {% endif %}
                {% if block.settings.desc_featured_about_2 %}
                  <div class="tp-about-desc">
                    {{ block.settings.desc_featured_about_2 }}
                  </div>
                {% endif %}
              </div>
            </div>
            <div class="tp-about__featured__item text-center">
              {% if ImageBackground3 != blank %}
                <img
                  class="full-img"
                  src="{{ ImageBackground3 | image_url: width: ImageBackground3.width , height: ImageBackground3.height }}"
                  alt="background image"
                  width="{{ImageBackground3.width}}"
                  height="{{ImageBackground3.height}}"
