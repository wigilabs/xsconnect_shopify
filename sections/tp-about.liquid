                {% endif %}
                {% if block.settings.desc_featured_about_3 %}
                  <div class="tp-about-desc">
                    {{ block.settings.desc_featured_about_3 }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

