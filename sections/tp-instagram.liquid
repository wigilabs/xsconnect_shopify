              <div class="tp-instagram__image">
                {% assign imageInstagram = block.settings.image_instagram %}
                {% if imageInstagram != blank %}
                  {% render 'responsive-image', image: imageInstagram %}
                {% else %}
                  {% render 'no-image-banner', text_size: '' %}
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .tp-instagram__parent {
    column-gap: {{ section.settings.gap_item }}px;
  }

  .tp-instagram__item{
    {% if section.settings.instagram_to_show == 6 %}
      width: 16.666%;
    {% elsif section.settings.instagram_to_show == 5 %}
      width: 20%;
    {% elsif section.settings.instagram_to_show == 4 %}
      width: 25%;
    {% elsif section.settings.instagram_to_show == 3 %}
      width: 33.3333%;
    {% elsif section.settings.instagram_to_show == 2 %}
      width: 50%;
    {% endif %}
  }
</style>
{% render 'margin-bottom' %}
{% schema %}
{
  "name": "Instagram",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "ins_ctn",
      "label": "Width layout",
      "options": [
        {
          "value": "container",
          "label": "Container"
        },
        {
          "value": "lg-container",
          "label": "Large container"
        },
        {
          "value": "container-fluid",
          "label": "Width full"
        }
      ],
      "default": "container-fluid"
    },
    {
      "type": "text",
      "id": "title_instagram",
      "label": "Title",
      "default": "@ FOLLOW US ON"
    },
    {
      "type": "text",
      "id": "sub_title_instagram",
      "label": "Sub title",
      "default": "INSTAGRAM"
    },
    {
      "type": "text",
      "id": "profile",
      "label": "Profile URL"
    },
    {
      "type": "select",
      "id": "data_instagram",
      "label": "Data instagram",
      "info": "If you choose data instagram then go to \"Theme settings > Integration\" to update Instagram token. If you choose custom data, add blocks to customize",
      "options": [
        {
          "value": "data_instagram",
          "label": "Data instagram"
        },
        {
          "value": "custom_data",
          "label": "Custom data"
        }
      ],
      "default": "custom_data"
    },
    {
      "type": "range",
      "id": "gap_item",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Gap item",
      "default": 10
    },
    {
      "type": "range",
      "id": "instagram_to_show",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 6,
      "label": "Instagram to show"
    },
    {
      "type": "header",
      "content": "t:sections.margin_bottom.content"
    },
    {
      "type": "paragraph",
      "content": "Unit: pixel"
    },
    {
      "type": "number",
      "id": "margin_bottom_desktop",
      "label": "t:sections.margin_bottom.desktop.label",
      "default": 80
    },
    {
      "type": "number",
      "id": "margin_bottom_table",
      "label": "t:sections.margin_bottom.tablet.label",
      "default": 60
    },
    {
      "type": "number",
      "id": "margin_bottom_mobile",
      "label": "t:sections.margin_bottom.mobile.label",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "item_instagram",
      "name": "Item instagram",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_instagram",
          "label": "Image instagram"
        },
        {
          "type": "url",
          "id": "link_instagram",
          "label": "Link instagram"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram",
      "category": "Image",
      "blocks": [
        {
          "type": "item_instagram"
        },
        {
          "type": "item_instagram"
        },
        {
          "type": "item_instagram"
        },
        {
          "type": "item_instagram"
        },
        {
          "type": "item_instagram"
        },
        {
          "type": "item_instagram"
        }
      ]
    }
  ]
}
{% endschema %}
