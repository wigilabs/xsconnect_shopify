{% liquid
  assign WidthLayout = section.settings.ins_ctn
%}

<div
  class="tp-instagram {{ WidthLayout }}"
  data-access-token="{{ settings.instagram_token }}"
  data-show_instagram="{{ section.settings.instagram_to_show }}"
  data-type="{{ section.settings.data_instagram }}"
>
  {% if section.settings.title_instagram != blank or section.settings.sub_title_instagram != blank %}
    <div class="tp-instagram__heading text-center mb-10">
      {% if section.settings.title_instagram != blank %}
        <h2 class="tp-instagram__title mb-3.75">
          {% assign link = section.settings.profile | default: '#' %}
          <a href="{{ link }}" target="_blank">
            {{ section.settings.title_instagram }}
          </a>
        </h2>
      {% endif %}
      {% if section.settings.sub_title_instagram != blank %}
        <p class="tp-instagram__sub-title">
          {{ section.settings.sub_title_instagram }}
        </p>
      {% endif %}
    </div>
  {% endif %}
  <div class="tp-instagram__list">
    {% if section.settings.data_instagram == 'data_instagram' %}
      <div class="tp-instagram__wrapper tp-instagram__parent flex"></div>
    {% else %}
      <div class="flex tp-instagram__parent">
        {% for block in section.blocks %}
          <div class="tp-instagram__item">
            <a href="{{ block.settings.link_instagram }}" title="instagram item">
